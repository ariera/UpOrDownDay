#welcome_header
  %h1 UpOrDownDay
  %h2 how are you feeling today?



%ul#login_or_signup_wrapper.clearfix
  %li#login
    %h3 login
    
    = form_tag user_session_path do
      = text_field_tag 'user[email]', nil, :placeholder => "email"
      %br
      = password_field_tag 'user[password]', nil, :placeholder => "password"
      %br
      = check_box_tag 'user[remember_me]'
      = label_tag 'user[remember_me]', 'Remember me'
      %br
      %button.button Login
      %br
      = link_to "Forgot your password?", new_password_path('user')
    
  %li#signup
    %h3 sign up
    = form_tag user_registration_path do
      = text_field_tag 'user[email]', nil, :placeholder => "email"
      %br
      = password_field_tag 'user[password]', nil, :placeholder => "password"
      %br
      = password_field_tag 'user[password_confirmation]', nil, :placeholder => "repeat password"
      %br
      %button.button Sign Up
      %br
      = link_to "Forgot your password?", new_password_path('user')